{
  "name": "vault22-testing",
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "test-runner-ui"
  ],
  "scripts": {
    "test": "npm run test:android && npm run test:ios",
    "test:android": "npx tsx node_modules/.bin/wdio config/wdio.android.conf.ts",
    "test:android:devicefarm": "npx ts-node node_modules/.bin/wdio config/wdio.android.devicefarm.conf.ts",
    "test:ios": "npx tsx node_modules/.bin/wdio config/wdio.ios.conf.ts",
    "test:ios:devicefarm": "npx ts-node node_modules/.bin/wdio config/wdio.ios.devicefarm.simple.conf.ts",
    "build:check": "npx tsx scripts/check-build.ts",
    "build:fetch": "npx tsx scripts/fetch-builds.ts",
    "build:list": "ls -la apps/android/",
    "appium:start": "/opt/homebrew/bin/appium server --address 127.0.0.1 --port 4723 --allow-insecure chromedriver_autodownload",
    "appium:stop": "lsof -ti:4723 | xargs kill -9 2>/dev/null || echo 'Appium server not running'",
    "appium:doctor": "appium driver doctor uiautomator2 && appium driver doctor xcuitest",
    "appium:install": "npm install -g appium && appium driver install uiautomator2 && appium driver install xcuitest",
    "setup:android": "echo 'Make sure Android Studio and SDK are installed. Set ANDROID_HOME environment variable.'",
    "setup:ios": "echo 'Make sure Xcode and iOS Simulator are installed. iOS testing requires macOS.'",
    "setup:check": "npx tsx scripts/setup-check.ts",
    "compile": "tsc",
    "compile:watch": "tsc --watch",
    "allure:generate": "allure generate allure-results --clean -o allure-report",
    "allure:open": "allure open allure-report",
    "allure:serve": "allure serve allure-results"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.2.0",
    "@wdio/allure-reporter": "^9.18.0",
    "@wdio/appium-service": "^9.18.4",
    "@wdio/cli": "^9.18.4",
    "@wdio/local-runner": "^9.18.4",
    "@wdio/mocha-framework": "^9.18.0",
    "@wdio/spec-reporter": "^9.18.0",
    "@wdio/types": "^9.16.2",
    "allure-commandline": "^2.34.1",
    "expect-webdriverio": "^5.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2",
    "webdriverio": "^9.18.4"
  },
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.11.0",
    "dotenv": "^17.2.1",
    "ios-simulator-mcp": "^1.4.0"
  }
}
