# Bitrise Configuration
BITRISE_API_TOKEN=your_bitrise_api_token_here
BITRISE_APP_SLUG=your_bitrise_app_slug_here

# Default branch for fetching builds
BRANCH=develop

# Test Environment
TEST_ENVIRONMENT=staging
APPIUM_PORT=4723

# Build Selection
USE_LATEST=true              # Auto-select newest APK/app
# APK_NAME=specific.apk      # Use specific APK (Android)
# IOS_APP_NAME=specific.app  # Use specific app (iOS)

# Android Device Configuration (all optional - uses defaults if not set)
# ANDROID_DEVICE_NAME=Pixel_8_Pro   # Device name (default: Android Emulator)
# ANDROID_VERSION=14                 # Android version (default: latest)
# ANDROID_UDID=emulator-5554        # Specific device ID
# ANDROID_AVD=Pixel_8_API_34        # Specific AVD name
# ANDROID_FULL_RESET=false          # Full app reset (default: true)
# ANDROID_NO_RESET=true             # Keep app data (default: false)

# iOS Device Configuration (all optional - uses defaults if not set)
# IOS_DEVICE_NAME=iPhone 15 Pro     # Device name (default: iPhone 15)
# IOS_VERSION=17.2                  # iOS version (default: latest)
# IOS_UDID=ABCD-1234                # Specific device/simulator ID
# IOS_FULL_RESET=true               # Full app reset (default: false)
# IOS_NO_RESET=true                 # Keep app data (default: false)